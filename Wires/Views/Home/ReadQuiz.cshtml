
@model QuizForArticleViewModel
@{
    ViewData["Title"] = Model.Article.Title;
    ViewData["Controller"] = "Home";
    ViewData["Action"] = "ReadQuiz";
}


<div class="row marginAll15">
    <h5 class="col-xs-6 text-left">Author: <strong>@Model.Article.Author</strong></h5>
    <h5 class="col-xs-6 text-right">Published: <strong>@Model.Article.PublishedDate.ToString("dd.MM.yyyy hh:mm tt")</strong></h5>
    <a class="col-lg-12 text-left" href="@Model.Article.Link"><h2>@ViewData["Title"]</h2></a>
</div>

<article class="row marginAll15">
    <img class="pull-right marginAll15" width="50%" src="@Model.Article.Image" />
    @Html.Raw(@Model.Article.Text)
</article>
<hr />
<div>
    <form method="post">
        <h3>Quiz created at: @Model.Quiz.CreatedDate.ToString("dd.MM.yyyy hh:mm tt")</h3>
        <hr />
        <div class="row">
            @for (int i = 0; i < Model.Questions.Count; i++)
            {
                <div class="col-lg-6">
                    <h4>@(i+1)) @Model.Questions[i].Text</h4>
                    <div class="col-lg-12">
                        <input asp-for="@Model.Questions[i]" type="radio" value="@Wires.Helpers.AnswerCode.A" /> @Wires.Helpers.AnswerCode.A.GetDisplayName()) @Model.Questions[i].AnswerA
                    </div>
                    <div class="col-lg-12">
                        <input asp-for="@Model.Questions[i]" type="radio" value="@Wires.Helpers.AnswerCode.B" /> @Wires.Helpers.AnswerCode.B.GetDisplayName()) @Model.Questions[i].AnswerB
                    </div>
                    <div class="col-lg-12">
                        <input asp-for="@Model.Questions[i]" type="radio" value="@Wires.Helpers.AnswerCode.C" /> @Wires.Helpers.AnswerCode.C.GetDisplayName()) @Model.Questions[i].AnswerC
                    </div>
                    <div class="col-lg-12">
                        <input asp-for="@Model.Questions[i]" type="radio" value="@Wires.Helpers.AnswerCode.D" /> @Wires.Helpers.AnswerCode.D.GetDisplayName()) @Model.Questions[i].AnswerD
                    </div>
                </div>
            }
        </div>
        <hr />
        <div class="form-group">
                <button type="submit" class="btn btn-lg btn-primary">Create Quiz</button>
        </div>

    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}